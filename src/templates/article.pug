- const blog = LANG.blog;


article
    section.blog
        div.container
            div.blog_header
                div.blog_header_path
                    each link in blog.blog_header_links
                        a(href="#")= link.link
                        span= link.arrow  
                div.blog_header_search
                    div.blog_header_search_content
                        h3= blog.search_title
                        p= blog.search_text
                        div.blog_header_search_input
                            input(type="text", placeholder="Search")
                            a(href="")
                                img(src=blog.search_icon, alt="") 
                    div.blog_header_search_img
                        img(src=blog.search_img)
            div.blog_new
                div.blog_new_title
                    p
                        span= blog.new_lable
                div.blog_new_posts
                    each post in blog.blog_new_posts
                        div.blog_new_row
                            div.blog_new_img
                                img(src=post.img, alt="")
                            div.blog_new_content
                                span= post.date
                                a(href="#") 
                                    h2= post.title
                                p= post.text
            div.blog_popular
                div.blog_popular_title
                    p= blog.popular_lable
                div.blog_popular_posts
                    each post in blog.blog_popular_posts
                        div.blog_popular_row
                            div.blog_popular_img
                                img(src=post.img, alt="")
                            div.blog_popular_content
                                span= post.date
                                a(href="#")
                                    h2= post.title
                                p= post.text
            div.blog_interesting
                div.blog_interesting_title
                    p= blog.interesting_lable
                div.blog_interesting_posts
                    each post in blog.blog_interesting_posts1
                        div.blog_interesting_row
                            div.blog_interesting_img
                                img(src=post.img, alt="")
                            div.blog_interesting_content
                                span= post.date
                                a(href="#")
                                    h2= post.title
                                p= post.text
            div.blog_package
                div.blog_package_content
                    img(src=blog.blog_package_logo, alt="")
                    h3= blog.blog_package_title
                    p= blog.blog_package_text
                    span
                        a(href="#")= blog.blog_package_link
                div.blog_package_img
                    img(src=blog.blog_package_img, alt="")
            div.blog_interesting
                div.blog_interesting_posts
                    each post in blog.blog_interesting_posts2
                        div.blog_interesting_row
                            div.blog_interesting_img
                                img(src=post.img, alt="")
                            div.blog_interesting_content
                                span= post.date
                                a(href="#")
                                    h2= post.title
                                p= post.text

